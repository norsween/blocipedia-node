<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <% include ../static/partials/messages.ejs %>

      <h1>Sign in</h1>

      <form action="/users/sign_in" method="post">

        <div class="form-group">
          <label for="username">User Name</label>
          <input type="username" class="form-control" name="username" aria-describedby="emailHelp" placeholder="Enter user name">
          <small class="text-muted" id="emailHelp">user name must be a valid name</small>
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" aria-describedby="passwordHelp" placeholder="Enter password">
          <small class="text-muted" id="passwordHelp">password must be a valid password</small>
        </div>

        <button type="submit" class="btn btn-primary">Sign in</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>

